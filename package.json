{
  "name": "@lxgicstudios/pipelint",
  "version": "1.0.0",
  "description": "Validate GitHub Actions workflow YAML files offline. Catches unknown keys, deprecated actions, missing required fields, and invalid expressions. Built-in auto-fix.",
  "main": "dist/index.js",
  "bin": {
    "pipelint": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "github",
    "actions",
    "workflow",
    "yaml",
    "lint",
    "validate",
    "ci",
    "cd",
    "pipeline",
    "devops",
    "cli",
    "offline"
  ],
  "author": "LXGIC Studios",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lxgicstudios/pipelint"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node": "^20.0.0"
  }
}
